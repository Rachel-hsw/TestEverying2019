<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/test"
        android:text="焦点抢夺"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/test"
        android:text="如右图所示，点击终止按钮的时候并不能触发点击事件。因为我虽然为黄色区域添加了点击事件，但是我将终止按钮设置了setClickable(true),从而产生了焦点抢夺事件"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/test"
        android:text="SpannableString的使用"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/test_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv3"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/test"
        android:text="阴影测试"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_text"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/test"
        android:background="#FF569493"
        android:text="去阴影界面"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/test"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#E8612D"
        android:gravity="center" />
</RelativeLayout>