<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic_panel_home"
        android:orientation="vertical"
        android:padding="24dp">

        <com.test.hsw.myview.PorterDuffXfermodeView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <com.test.hsw.myview.TestView
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置" />

        <com.test.hsw.myview.ProgressBar
            android:id="@+id/dd"
            android:layout_width="216dp"
            android:layout_height="20dp"
            app:backgroundColor="#88B1F9"
            app:processColor="#FFFFFF" />

        <com.test.hsw.myview.CircleView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.test.hsw.myview.CircleView1
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <com.test.hsw.myview.RoundRectView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="220dp" />

            <com.test.hsw.myview.CircleView2
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="220dp" />

            <com.test.hsw.myview.CircleView3
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="440dp" />

            <com.test.hsw.myview.CustomView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="660dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="660dp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="660dp"
                android:orientation="vertical" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>